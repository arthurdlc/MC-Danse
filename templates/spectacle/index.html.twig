{% extends 'base.html.twig' %}

{% block title %}MC-Danse | Liste ddes Spectacles {% endblock %}

{% block body %}
<center>
    <table class="table">
        <thead>
            <tr>
                <th>Nom : </th>
                <th>Lieu : </th>
                <th>Action :</th>
            </tr>
        </thead>
        <tbody>
        {% for spectacle in spectacles %}
            <tr>
                <td>{{ spectacle.nom }}</td>
                <td>{{ spectacle.lieu }}</td>
                <td>
                    <a href="{{ path('app_spectacle_show', {'id': spectacle.id}) }}"><button class="btn btn-primary">Voir</button></a>
                    <a href="{{ path('app_spectacle_edit', {'id': spectacle.id}) }}"><button class="btn btn-warning">Modifier</button></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_spectacle_new') }}"><button class="btn btn-success">Cr√©er un spectacle</button></a></center>
{% endblock %}
